package main

import "C"
import "fmt"

// Build entrypoint for FFI library mode is generated by the compiler using -buildmode=c-shared.
// You will typically export functions using cgo like:

//export Greet
func Greet(name *C.char) *C.char {
    // Convert C string to Go string
    goName := C.GoString(name)
    
    // Call your Go function
    result := fmt.Sprintf("Hello %s from Go!", goName)
    
    // Convert Go string to C string and return
    return C.CString(result)
}

//export Add
func Add(a, b C.int) C.int {
    return a + b
}

